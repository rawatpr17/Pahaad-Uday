{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/sitemap.xml", "dest": "/api/sitemap" },
    { "src": "/robots.txt", "dest": "/api/robots" },
    { "src": "/manifest.json", "dest": "/api/manifest" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_NAME": "पहाड़ उदय (Pahaad Uday News)",
    "NEXT_PUBLIC_DESCRIPTION": "उत्तराखंड की सबसे भरोसेमंद डिजिटल खबरें — राजनीति, मौसम, खेल, स्थानीय घटनाएं और संस्कृति से जुड़ी हर बात।",
    "NEXT_PUBLIC_REGION": "Rudraprayag, Uttarakhand",
    "NEXT_PUBLIC_CATEGORIES": "Local, Politics, Weather, Sports, Culture",
    "NEXT_PUBLIC_ANALYTICS": "https://www.googletagmanager.com/gtag/js?id=G-XXXXXXX",
    "NEXT_PUBLIC_MANIFEST_URL": "/manifest.json",
    "NEXT_PUBLIC_SITE_URL": "https://pahaad-uday.vercel.app"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=*, microphone=*" }
      ]
    }
  ],
  "github": {
    "enabled": true,
    "autoJobCancelation": true
  }
}